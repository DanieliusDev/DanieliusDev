{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"isolatedModules": true,
		"baseUrl": "src",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["src", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
